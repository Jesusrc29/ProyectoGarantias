    <tfoot>
        @Html.PagedListPager((IPagedList)Model,
        page=>Url.Action("Index",
        "DetalleLoteModelo",new{page=page}),X.PagedList.Web.Common.PagedListRenderOptions.MinimalWithItemCountText)
