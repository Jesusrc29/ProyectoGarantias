                @Html.DisplayNameFor(model => model.GVCopiaRevision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GVTraspaso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GHEscritura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GHAvaluo)
