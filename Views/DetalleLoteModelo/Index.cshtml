            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CentroCosto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadGarantias)
            </td>
