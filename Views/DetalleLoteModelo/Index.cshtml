                @Html.DisplayFor(modelItem => item.ValorGarantia)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Contrato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pagare)
            </td>*@
