@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                document.querySelector("#btnObtenerDatosAPI").addEventListener("click", async function () {
                    const cedula = document.querySelector("#Cedula").value;
                    const codigoSolicitud = document.querySelector("#CodigoSolicitud").value;

                    const response = await fetch(`http://190.4.17.10:8889/Api/Datosgarantias?Identidad=${cedula}&codsolid=${codigoSolicitud}`);
                    const data = await response.json();

                    // Llenar campos con los datos obtenidos
                    document.querySelector("#NombreCliente").value = data[0].Nombres;
                    document.querySelector("#ApellidosCliente").value = data[0].Apellidos;
                    document.querySelector("#Prestamo").value = data[0].Prestamo;

                    // Agregar campos para cada garantía
                    const garantiasContainer = document.querySelector("#garantiasContainer");
                    garantiasContainer.innerHTML = ""; // Limpiar el contenido existente

                    for (const garantia of data) {
                        const garantiaDiv = document.createElement("div");
                        garantiaDiv.classList.add("form-group");

                        // Crear campos para cada garantía
                        const label = document.createElement("label");
                        label.textContent = `Garantia ${garantia.Cod_aval}`;
                        const valorInput = document.createElement("input");
                        valorInput.classList.add("form-control");
                        valorInput.value = ""; // Asignar el valor correspondiente

                        const descripcionInput = document.createElement("input");
                        descripcionInput.classList.add("form-control");
                        descripcionInput.value = garantia.Nombre_aval;

                        const tipoInput = document.createElement("input");
                        tipoInput.classList.add("form-control");
                        tipoInput.value = garantia.Descrip_aval;

                        garantiaDiv.appendChild(label);
                        garantiaDiv.appendChild(valorInput);
                        garantiaDiv.appendChild(descripcionInput);
                        garantiaDiv.appendChild(tipoInput);

                        garantiasContainer.appendChild(garantiaDiv);
                    }

                    // Mostrar los campos de datos de la API
                    document.querySelector("#datosAPIContainer").style.display = "block";
                });
            });
        </script>
