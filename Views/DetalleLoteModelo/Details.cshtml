            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DetalleLoteModelo.GHRevisionIP)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DetalleLoteModelo.GHRevisionIP)
            </dd>
        </dl>
    </div>
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DetalleLoteModelo.ValorGarantia)
            </dt>
