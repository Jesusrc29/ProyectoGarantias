            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DetalleLoteModelo.GHEscritura)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DetalleLoteModelo.GHEscritura)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DetalleLoteModelo.GHAvaluo)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DetalleLoteModelo.GHAvaluo)
