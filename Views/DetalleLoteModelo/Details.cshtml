            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DetalleLoteModelo.Contrato)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DetalleLoteModelo.Pagare)
