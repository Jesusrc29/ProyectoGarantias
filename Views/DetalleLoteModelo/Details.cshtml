</div>
<div>
    <h3>Lista de Garantias</h3>
    <hr />
    <table id="documentosTable" class="table table-hover table-bordered table-sm">
        <thead>
            <tr class="table-info">
                <th>Correlativo</th>
                <th>Descripción Aval</th>
                <th>Monto</th>
                <th>Nombre Aval</th>
                <th>Codigo Barras</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DetalleLoteModelo.Garantias)
            {
                <tr>
                    <td>
                        @item.CorrGarantia
                    </td>
                    <td>
                        @item.DescripAval
                    </td>
                    <td>
                        @item.MontoGarantia
                    </td>
                    <td>
                        @item.NombreAval
                    </td>
                    <td>
                        <a asp-controller="DetalleLoteModelo" asp-action="DescargarCodigoBarras" asp-route-correlativo="@item.CorrGarantia">Descargar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<div>
    <h3>Lista Documentos</h3>
    <hr />
    <table id="documentosTable" class="table table-hover table-bordered table-sm">
        <thead>
            <tr class="table-info">
                <th>Nombre Original</th>
                <th>Tipo de Documento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Documentos)
            {
                <tr>
                    <td>
                        @item.NombreOriginal
                    </td>
                    <td>
                        @item.TipoDocumento
                    </td>
                    <td>
                        <a asp-controller="Documento" asp-action="DescargarDocumento" asp-route-documentoId="@item.DocumentoId">Descargar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



<div>
    <a asp-action="Edit" asp-route-loteId="@Model.DetalleLoteModelo.LoteId" asp-route-id="@Model.DetalleLoteModelo.Id">Edit</a> |
    <a asp-action="Index" asp-route-id="@Model.DetalleLoteModelo?.LoteId">Back to List</a>
</div>

