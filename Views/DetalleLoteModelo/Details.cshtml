            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DetalleLoteModelo.CantidadGarantias)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DetalleLoteModelo.CantidadGarantias)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DetalleLoteModelo.GVDocOriginal)
            </dt>
            <dd class="col-sm-8">
